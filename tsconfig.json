{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": false,
    "lib": [
      "dom",
      "es2018"
    ],
    "importHelpers": true,
    "downlevelIteration": true
  },
  "include": [
    "src/layoutPlatform/*",
    "src/index.ts",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ],
  "typeRoots": [
    "./src/typings",
    "./node_modules/@types/"
  ]
}