    "module": "commonjs",
    "target": "es2018",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["dom", "es2018"],
    "importHelpers": true,
    "downlevelIteration": true
  },
  "include": [
