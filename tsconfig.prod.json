{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["dom", "es2018"],
    "importHelpers": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/src": ["src/index.ts"],
      "@/src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "typeRoots": ["./node_modules/@types/"]
}
